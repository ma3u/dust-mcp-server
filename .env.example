# MCP Server Configuration
MCP_NAME=Dust MCP Server TS
MCP_HOST=127.0.0.1
MCP_PORT=5001
MCP_TIMEOUT=60 # seconds

# Session Configuration
SESSION_STORE_TYPE=memory # 'memory' for development, 'redis' for production
SESSION_SECRET=your_session_secret_here
SESSION_TTL=86400 # 24 hours in seconds

# Redis Configuration (only required if SESSION_STORE_TYPE=redis)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_TLS=false

# Dust API Configuration
DUST_API_KEY=your_dust_api_key_here
DUST_API_URL=https://dust.tt/api/v1
DUST_WORKSPACE_ID=your_workspace_id_here
DUST_AGENT_IDs=agent_id_1, agent_id_2, agent_id_3
DUST_DOMAIN=https://dust.tt

# User Context Information (used in Dust API requests)
DUST_USERNAME=Dust MCP Server TS
DUST_EMAIL=your_email@example.com
DUST_FULLNAME=Your Full Name
DUST_TIMEZONE=UTC

# Advanced API Features
DUST_DEFAULT_OUTPUT_FORMAT=text # Options: text, json
DUST_ENABLE_EXTRACTION=true # Enable data extraction features
DUST_ENABLE_IMAGE_GENERATION=true # Enable image generation features

# Logging Configuration
LOG_LEVEL=INFO # Options: ERROR, WARN, INFO, DEBUG, TRACE
